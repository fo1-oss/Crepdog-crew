// This is the Prisma schema file for CDC Investor Portal Backend
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model - Investors and Admins
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed with bcrypt
  name      String
  company   String?
  role      Role     @default(INVESTOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  sessions  Session[]
  pageViews PageView[]
  
  @@index([email])
  @@map("users")
}

enum Role {
  INVESTOR
  ADMIN
}

// Session Model - Track user sessions
model Session {
  id          String    @id @default(uuid())
  userId      String
  token       String    @unique
  ipAddress   String?
  city        String?
  country     String?
  latitude    Float?
  longitude   Float?
  userAgent   String?
  device      String?
  browser     String?
  loginTime   DateTime  @default(now())
  logoutTime  DateTime?
  duration    Int?      // Duration in seconds
  isActive    Boolean   @default(true)
  lastActivity DateTime @default(now())
  
  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageViews PageView[]
  
  @@index([userId])
  @@index([token])
  @@index([isActive])
  @@map("sessions")
}

// PageView Model - Track page engagement
model PageView {
  id           String   @id @default(uuid())
  sessionId    String
  userId       String
  page         String   // 'overview', 'financials', 'stores', etc.
  timeSpent    Int      @default(0) // Time in seconds
  scrollDepth  Int?     // Percentage scrolled
  interactions Int      @default(0) // Number of clicks/interactions
  timestamp    DateTime @default(now())
  
  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@index([userId])
  @@index([page])
  @@index([timestamp])
  @@map("page_views")
}

// DocumentVersion Model - Track processed documents
model DocumentVersion {
  id            String         @id @default(uuid())
  documentType  DocumentType
  driveFileId   String         @unique
  fileName      String
  fileSize      Int?           // Size in bytes
  mimeType      String?
  processedAt   DateTime       @default(now())
  ocrStatus     OcrStatus      @default(PENDING)
  ocrError      String?
  extractedData Json?          // Raw OCR extracted data
  
  @@index([documentType])
  @@index([driveFileId])
  @@index([ocrStatus])
  @@map("document_versions")
}

enum DocumentType {
  PITCH_DECK
  MIS
  FINANCIALS
  OTHER
}

enum OcrStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// BusinessData Model - Centralized business metrics
model BusinessData {
  id        String   @id @default(uuid())
  dataKey   String   @unique // e.g., 'revenue.ytdFY26', 'arr', 'storeCount'
  dataValue Json     // Flexible JSON value
  source    DataSource
  updatedAt DateTime @updatedAt
  updatedBy String?  // User ID or 'system'
  
  @@index([dataKey])
  @@index([source])
  @@index([updatedAt])
  @@map("business_data")
}

enum DataSource {
  OCR
  MANUAL
  SHEETS
  SYSTEM
}

// OcrJob Model - Track OCR processing jobs
model OcrJob {
  id          String    @id @default(uuid())
  documentId  String?
  status      OcrStatus @default(PENDING)
  progress    Int       @default(0) // 0-100
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  error       String?
  result      Json?     // Parsed metrics
  
  @@index([status])
  @@index([startedAt])
  @@map("ocr_jobs")
}
